<form method="POST" action="/courses/{{course._id}}?_method=PUT">
  <div class="mb-3">
    <label for="name" class="form-label">Tên khoá học</label>
    <input
      type="text"
      value="{{course.name}}"
      class="form-control"
      id="name"
      name="name"
    />
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Mô tả</label>
    <input
      type="text"
      value="{{course.description}}"
      class="form-control"
      id="description"
      name="description"
    />
  </div>
  <div class="mb-3">
    <label for="videoId" class="form-label">Video Id</label>
    <input
      type="text"
      value="{{course.videoId}}"
      class="form-control"
      id="videoId"
      name="videoId"
    />
  </div>
  <button type="submit" class="btn btn-primary">Lưu lại</button>
</form>